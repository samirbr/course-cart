{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    //"listFiles": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "dist/",
    "pretty": true,
    "removeComments": false,
    "rootDir": "src/",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "*.exclude",
    "dist",
    "node_modules"
  ]
}